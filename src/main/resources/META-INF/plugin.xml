<idea-plugin>
    <id>com.github.konbluesky.javadesignpatternhelperideaplugin</id>
    <name>java-design-pattern-helper-idea-plugin</name>
    <vendor>konbluesky</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.github.konbluesky.javadesignpatternhelperideaplugin.services.MyApplicationService"/>
        <projectService serviceImplementation="com.github.konbluesky.javadesignpatternhelperideaplugin.services.MyProjectService"/>
    </extensions>

    <applicationListeners>
        <listener class="com.github.konbluesky.javadesignpatternhelperideaplugin.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>
</idea-plugin>
